<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/white"
tools:context=".activities.ConfirmActivity">

<RelativeLayout
    android:id="@+id/relativeLayout5"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textView8"
    android:layout_marginTop="10dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:text="Tu último registro fue"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextLast"
        android:layout_width="235dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/textView41"
        android:layout_below="@+id/textView41"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Último odómetro"
        android:inputType="number" />

</RelativeLayout>

<TextView
    android:id="@+id/textView8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginStart="50dp"
    android:layout_marginTop="30dp"
    android:text="Tu odómetro mensual"
    android:textSize="24sp" />

<RelativeLayout
    android:id="@+id/relativeLayout4"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/relativeLayout5"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/textView58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="Introduce tu odómetro actual"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextConfirma"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Odómetro"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView58"
        android:layout_alignStart="@+id/textView58" />
</RelativeLayout>

<Button
    android:id="@+id/button5"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/relativeLayout4"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:background="@drawable/button"
    android:onClick="validar"
    android:textAllCaps="false"
    android:textSize="18sp"
    android:text="Aceptar"
    android:textColor="@android:color/white" />

<ImageView
    android:id="@+id/imageView17"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/button5"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="15dp"
    android:scaleType="fitCenter"
    app:srcCompat="@drawable/foto" />

</RelativeLayout>
