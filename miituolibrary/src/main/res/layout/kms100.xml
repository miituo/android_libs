<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cntCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="25dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:id="@+id/lbCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="codigo"/>

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/copy" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvKms"
        android:layout_centerHorizontal="true"
        android:gravity="center|center_horizontal"
        android:text="Refiere a un amigo y si contrata ambos reciben:"
        android:textSize="11sp"
        android:textColor="@color/colorDarkGray"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvKms"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/textView39"
        android:layout_centerHorizontal="true"
        android:gravity="center|center_horizontal"
        android:text="150 km"
        android:textColor="#5f5f5f"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cntCodigo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:gravity="center|center_horizontal"
        android:textColor="@color/colorDarkGray"
        android:text="de descuento en el siguiente reporte \n utilizando este cÃ³digo:"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView30"
        android:layout_toEndOf="@+id/tvKms"
        android:textColor="#5f5f5f"
        android:textSize="16sp"
        android:text="*" />

</RelativeLayout>